{
  "name": "magnograbr",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build:background": "vite build --mode background",
    "build:content": "vite build --mode content",
    "build:ui": "vite build",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/popup.css --minify && tailwindcss -i ./src/styles/tailwind.css -o ./dist/options.css --minify",
    "build:ts": "tsc --noEmit",
    "build": "rimraf dist && mkdir dist && npm run build:ts && npm run build:background && npm run build:content && npm run build:ui && npm run build:css && node scripts/prepare-dist.js && node scripts/fix-html-css.js",
